-a always,exit -F arch=b32 -S ptrace -F a0=0x4 -k T1055.008_Ptrace_Sys_Call
-a always,exit -F arch=b64 -S ptrace -F a0=0x4 -k T1055.008_Ptrace_Sys_Call
